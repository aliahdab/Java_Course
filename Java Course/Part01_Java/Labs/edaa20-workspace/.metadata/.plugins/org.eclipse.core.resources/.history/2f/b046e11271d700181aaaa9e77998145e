public class test6 {
	public static void main(String[] args) {
		System.out.println(oddSum(-3));
	}

	public static int oddSum(int n) {

		if (n % 2 == 0 || n < 0) {
			return -1;
		} else {
			int sum=0;
			for (int i = 0; i <= n; i++) {
				if (i % 2 != 0) {
					sum = sum + i;
				}
				
			}
			return sum;
		}

	}
}
