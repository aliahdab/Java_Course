public class test6 {
	public static void main(String[] args) {
 System.out.println(oddSum(1));
	}

	public static int oddSum(int n) {
		int sum=0;
		if (n % 2 == 0 && n<0) {
			return -1;
		} else {
			for (int i =0;i<=n;i++) {
				if (i%2 !=0) {
				sum=sum+i;
				}
				
			}
		} return sum;

	}
}
